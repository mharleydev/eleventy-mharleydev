---
layout: layouts/standard-page.njk
title: Writing
description: The most recent postings from Michael Harley
changeFreq: daily
postHeaderImageUrl: /images/Michael-Harley-Avatar.jpeg
---
<section class="post-info">
    {% for post in collections.posts | reverse %}
    <section class="post-summary">
        <h2 class="post-info-heading"><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
        <div class="post-index-date">Published {{ post.data.date.toDateString() }}</div>
        <p class="post-description">{{ post.data.description }}</p>
        <p class="post-read-more"><a href="{{ post.url }}"> Read More --></a></p>
        {% set tagfound = false %}
        {% for tag in post.data.tags %}
            {% if tag === 'posts' %}
                {# do nothing #}
            {% else %}
                {% set tagfound = true %}
            {% endif %}
        {% endfor %}
        {% if tagfound === true %} 
        <section class="post-summary-tags">
            <ul>
                {% for tag in post.data.tags %}
                    {% if tag != "posts" %}
                        <li>{{ tag }}</li>
                    {% endif %}
                {% endfor %}
            </ul>
        </section>
        {% endif %}
    </section>
    {% endfor %}
</section>


